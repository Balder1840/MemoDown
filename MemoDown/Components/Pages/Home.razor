@layout MainLayout

@attribute [Authorize]

@inject MemoService _service

<RadzenSplitter>
    <RadzenSplitterPane Size="250px" Min="50px" Max="400px" class="h-100">
        <Sidebar />
    </RadzenSplitterPane>
    <RadzenSplitterPane Collapsible="false">
        <RadzenSplitter>
            <RadzenSplitterPane Size="250px" Min="50px" Max="400px">
